@model IEnumerable<Muebles_JJ.Infrastructure.ColorProducto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Color Producto</h1>

<table>
    <thead>
        <tr>
            <th>Id Color</th>
            <th>Nombre</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var fila in Model)
        {
            <tr>
                <td>@Html.Raw(fila.IdColor)</td>
                <td>@Html.Raw(fila.Nombre)</td>
                <td>
                    <a asp-action="Edit" asp-route-IdColor="@fila.IdColor">Editar</a> |
                    <a asp-action="Details" asp-route-IdColor="@fila.IdColor">Detalle</a> |
                    <a asp-action="Delete" asp-route-IdColor="@fila.IdColor">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>