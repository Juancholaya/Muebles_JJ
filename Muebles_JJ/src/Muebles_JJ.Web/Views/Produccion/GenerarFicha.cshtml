@model List<Muebles_JJ.Web.Models.Articulo>
@{
    ViewData["Title"] = "GenerarFicha";
    Layout = "~/Views/Shared/_LayoutUsuario.cshtml";
    int contadorArticulo = 0;
}

<div class="container" style="background-color:white;">
    <h1>Ficha Producción</h1>
    @foreach (var item in Model)
    {
        <br />
        contadorArticulo += 1;
        <div class="row" style="background-color:white;">
            <div class="col-2"></div>
            <div class="col-8" style="align-items:center">
                <fieldset class="border px-lg-4">
                    <legend class="w-auto" style="font-weight: bold; font-size:150%;">Producto @Html.Raw(contadorArticulo)</legend>
                    <div class="container">
                        <div class="row">
                            <div class="col-3" style="font-weight: bold; font-size:130%;">Producto:</div>
                            <div class="col-3" style="font-size:130%;">@Html.Raw(item.Tipo)</div>
                            <div class="col-3" style="font-weight: bold; font-size:130%;">Material:</div>
                            <div class="col-3" style="font-size:130%;">@Html.Raw(item.Material)</div>
                            <br />
                        </div>
                        <div class="row">
                            <div class="col-3" style="font-weight: bold; font-size:130%;">Color:</div>
                            <div class="col-3" style="font-size:130%;">@Html.Raw(item.Color)</div>
                            <div class="col-3" style="font-weight: bold; font-size:130%;">Medida:</div>
                            <div class="col-3" style="font-size:130%;">@Html.Raw(item.Medida)cm</div>
                        </div>
                        <div class="row">
                            <div class="col-3" style="font-weight: bold; font-size:130%;">Cantidad:</div>
                            <div class="col-3" style="font-size:130%;">@Html.Raw(item.Cantidad)</div>
                            <div class="col-3"></div>
                            <div class="col-3"></div>
                        </div>
                    </div>
                </fieldset>
            </div>
            <div class="col-2"></div>
        </div>
        <br />
    }
    <div class="row">
        <div class="col-8"></div>
        <div class="col-4">

            <a asp-action="Index" class="btn btn-outline-info">Volver</a>
        </div>
    </div>
</div>