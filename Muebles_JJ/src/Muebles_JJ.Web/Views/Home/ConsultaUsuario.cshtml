@model List<Muebles_JJ.Infrastructure.Usuario>
@{
    ViewData["Title"] = "ConsultaUsuario";
    Layout = "~/Views/Shared/_LayoutUsuario.cshtml";
}

<div class="row" style="background-color:white;">
    <div class="col-12">
        <h1>ConsultaUsuario</h1>
    </div>
</div>
<div class="row">
    <div class="col-12" style="background-color:white;display: inline-flex;justify-content: center;">
        <table id="tableUsuario" class="table table-hover">
            <thead>
                <tr>
                    <th>Usuario</th>
                    <th>Rol</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    List<Muebles_JJ.Infrastructure.Rol> listaRoles = (List<Muebles_JJ.Infrastructure.Rol>)ViewBag.TipoRol;
                    <tr>
                        <td>@Html.Raw(item.NombreUsuario)</td>
                        <td>@Html.Raw(listaRoles.Where(x => x.IdRol == item.IdRolFk).FirstOrDefault().Nombre)</td>
                        <td>
                            <a asp-action="EditarUsuario" class="btn btn-outline-secondary" asp-route-IdUsuario="@item.IdUsuario">Editar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#tableUsuario').DataTable();
    });
</script>